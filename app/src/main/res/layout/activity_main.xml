<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnIzq"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="216dp"
        android:background="@android:color/holo_red_dark"
        android:onClick="clickIzquierdo"

        android:text="@string/rojo"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDer"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCambio"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_marginStart="113dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="492dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="216dp"
        android:background="@android:color/black"
        android:onClick="clickDerecho"
        android:text="@string/negro"
        android:textColor="#020202"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnIzq" />
</androidx.constraintlayout.widget.ConstraintLayout>